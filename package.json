  "bugs": {
    "url": "https://github.com/bendiksolheim/bezier-curves/issues"
  },
  "homepage": "https://github.com/bendiksolheim/bezier-curves",
  "devDependencies": {
    "babel": "^4.7.16",
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "less": "^2.4.0",
    "watchify": "^2.6.0"
  },
  "dependencies": {}
}
